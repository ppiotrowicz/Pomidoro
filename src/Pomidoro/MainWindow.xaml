<Window x:Class="Pomidoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="80" Width="100">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="Normal" ProgressValue="{Binding CurrentTimer.Value, Mode=OneWay}" Description="Simple pomodoro timer" />
    </Window.TaskbarItemInfo>

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding Mode, Mode=OneWay}" HorizontalAlignment="Center" />
        <TextBlock Text="{Binding CurrentTimer.RemainingTime, Mode=OneWay}" />
    </StackPanel>
</Window>
