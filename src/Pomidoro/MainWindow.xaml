<Window x:Class="Pomidoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:pomidoro="clr-namespace:Pomidoro"
        Title="MainWindow" Height="37" Width="82"
        WindowState="Normal"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Top="{Binding Top, Mode=TwoWay}"
        Left="{Binding Left, Mode=TwoWay}"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        >
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="Normal" ProgressValue="{Binding CurrentTimer.Value, Mode=OneWay}" Description="Simple pomodoro timer" />
    </Window.TaskbarItemInfo>
    <Grid Background="#80000000">
        <pomidoro:PointMatrix PointSize="3" Spacing="2" FinishedBrush="Yellow" PendingBrush="Green" Progress="{Binding CurrentTimer.Value, Mode=OneWay}"/>
    </Grid>
    <!--<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <TextBlock Text="{Binding Mode, Mode=OneWay}" HorizontalAlignment="Center" />
        <TextBlock Text="{Binding CurrentTimer.RemainingTime, Mode=OneWay}" />
    </StackPanel>-->
</Window>
